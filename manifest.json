{
  "manifest_version": 3,
  "name": "LegiAble Lite",
  "version": "1.0",
  "description": "Make any webpage easier to read with OpenDyslexic font and reading ruler",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "action": {
  "default_popup": "popup.html",
  "default_icon": {
    "16": "icon128.png",
    "48": "icon128.png",
    "128": "icon128.png"
  }
},

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["opendyslexic.woff2"],
      "matches": ["<all_urls>"]
    }
  ]
}